# Description: Dynamic output configuration for Wayland WMs
# URL: https://gitlab.freedesktop.org/emersion/kanshi
# Maintainer: Jay Lanagan, j at lngn dot net
# Depends on: libscfg scdoc wayland

name=kanshi
version=1.8.0
release=1
source=(https://gitlab.freedesktop.org/emersion/kanshi/-/archive/v${version}/kanshi-v{$version}.tar.gz)
renames=($name-$version.tar.gz)

build() {

	meson setup $name-v$version build \
		--prefix=/usr \
		--sysconfdir=/etc \
		--buildtype=release \
		--wrap-mode=nofallback \
		-Db_lto=true \
		-Db_pie=true \
		-Dstrip=true

	meson compile -C build
	DESTDIR=$PKG meson install -C build

}
