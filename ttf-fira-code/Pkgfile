# Description: Free monospaced font with programming ligatures
# URL: https://github.com/tonsky/FiraCode/
# Maintainer: Jay Lanagan, j at lngn dot net

name=ttf-fira-code
version=6.2
release=1
source=(https://github.com/tonsky/FiraCode/releases/download/6.2/Fira_Code_v6.2.zip)

build() {

  mkdir -p $PKG/usr/share/fonts/TTF
  install -Dm644 $SRC/ttf/*.ttf -t $PKG/usr/share/fonts/TTF
  install -Dm644 $SRC/variable_ttf/*.ttf -t $PKG/usr/share/fonts/TTF

}
