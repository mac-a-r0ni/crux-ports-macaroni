# Description: Free monospaced font with programming ligatures
# URL: https://github.com/google/material-design-icons
# Maintainer: Jay Lanagan, j at lngn dot net

name=ttf-material-symbols-variable
version=4.0.0.r119
release=1
source=(https://slackware.lngn.net/pub/source/material-design-icons/material-design-icons-b2c0f61git.tar.xz)

build() {

  mkdir -p $PKG/usr/share/fonts/{TTF,OTF}
  cp -a material-design-icons-b2c0f61git/font/*.ttf $PKG/usr/share/fonts/TTF
  cp -a material-design-icons-b2c0f61git/font/*.otf $PKG/usr/share/fonts/OTF
  cp -a material-design-icons-b2c0f61git/variablefont/*.ttf $PKG/usr/share/fonts/TTF

}
