# Description: A collection of freely re-usable Autoconf macros
# URL: https://www.gnu.org/software/autoconf-archive/
# Maintainer: Tim Biermann, tbier at posteo dot de

name=autoconf-archive
version=2024.10.16
release=1
source=(https://ftpmirror.gnu.org/$name/$name-$version.tar.xz 312.patch)

build() {
  cd $name-$version

# Fix quote m4_fatal
  patch -Np1 -i ../312.patch

  ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install

  rm -r $PKG/usr/share/{doc,info}
  rm $PKG/usr/share/aclocal/ax_check_enable_debug.m4
  rm $PKG/usr/share/aclocal/ax_code_coverage.m4
}
