# Description: Compare files, directories and working copies
# URL: https://meldmerge.org
# Maintainer: Jay Lanagan, j at lngn dot net
# Depends on: dconf gdk-pixbuf glib gsettings-desktop-schemas gtk3 gtksourceview4 hicolor-icon-theme pango python3-cairo python3-gobject

name=meld
version=3.23.0
release=1
source=(https://download.gnome.org/sources/$name/3.23/$name-$version.tar.xz)

build() {

  meson setup $name-$version build \
    --prefix=/usr \
    --buildtype=plain \
    --wrap-mode nodownload \
    -D b_lto=true \
    -D b_pie=true \
    -D werror=false
  meson compile -C build
  DESTDIR=$PKG meson install -C build

rm -rf $PKG/usr/share/{help,locale}

}
