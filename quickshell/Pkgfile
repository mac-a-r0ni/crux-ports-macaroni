# Description: Flexible toolkit for making desktop shells with QtQuick
# URL: https://quickshell.org
# Maintainer: Jay Lanagan, j at lngn dot net
# Depends on: breakpad cli11 jemalloc libdrm libxcb pipewire mesa qt6-base qt6-declarative qt6-svg qt6-wayland wayland cmake qt6-shadertools spirv-tools wayland-protocols pkgconf

name=quickshell
version=0.2.0
release=1
source=(https://github.com/quickshell-mirror/$name/archive/v${version}/$name-$version.tar.gz)

build() {
    cmake -S $name-$version -B build -G Ninja \
	-D CMAKE_INSTALL_PREFIX=/usr \
	-D CMAKE_INSTALL_LIBDIR=lib \
	-D CMAKE_BUILD_TYPE=RelWithDebInfo \
	-D CMAKE_CXX_FLAGS_RELEASE="$CXXFLAGS" \
	-D CMAKE_C_FLAGS_RELEASE="$CFLAGS" \
	-D INSTALL_QML_PREFIX=lib/qt6/qml \
	-D DISTRIBUTOR="crux.nu" \
	-D DISTRIBUTOR_DEBUGINFO_AVAILABLE=NO \
        -Wno-dev
    cmake --build build
    DESTDIR=$PKG cmake --install build

#    rm -r $PKG/usr/share/locale
}
